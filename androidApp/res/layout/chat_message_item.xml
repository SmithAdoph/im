<?xml version="1.0" encoding="utf-8"?>
<com.open.lib.TouchView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="80dp"
    android:background="#000099cd"
    android:paddingBottom="0dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="0dp" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/card_color_on_background"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#99ffffff"
        android:contentDescription="white_line"
        android:translationY="79dp" />

    <com.open.lib.TouchImageView
        android:id="@+id/userHeadView"
        android:layout_width="50dp"
         android:translationY="16dp" 
        android:layout_height="50dp"
        android:layout_centerVertical="true" />

    <com.open.lib.TouchView
        android:layout_width="match_parent"
        android:layout_height="30dp"
                 android:translationY="16dp" 
        android:layout_marginLeft="57dp" >

        <com.open.lib.TouchTextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="李建国"
            android:textColor="@color/text_color_on_background"
            android:textSize="16sp" />

        <com.open.lib.TouchTextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="16:08"
            android:textColor="@color/text_color_on_background"
            android:textSize="14sp" />

        <com.open.lib.TouchTextView
            android:id="@+id/groupIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/icon_background"
            android:gravity="center"
            android:singleLine="true"
            android:text="群"
            android:textColor="#fff"
            android:textSize="14sp" />
    </com.open.lib.TouchView>

    <com.open.lib.TouchTextView
        android:id="@+id/tv_lastchatcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="57dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxEms="10"
        android:singleLine="true"
        android:text="今天来我们这儿吃饭吧~~好久没有"
        android:textColor="@color/text_color_on_background"
        android:textSize="14sp"
        android:translationY="-15dp" />

    <com.open.lib.TouchView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="right"
        android:layout_marginLeft="57dp"
        android:translationY="46dp" >

        <com.open.lib.TouchTextView
            android:id="@+id/tv_notread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/number_hint"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </com.open.lib.TouchView>

</com.open.lib.TouchView>