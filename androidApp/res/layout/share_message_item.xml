<?xml version="1.0" encoding="utf-8"?>
<com.open.lib.TouchView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_group_share_item" >

    <RelativeLayout
        android:id="@+id/gshare_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <ImageView
            android:id="@+id/share_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/face_man" />

        <TextView
            android:id="@+id/share_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/share_head"
            android:text="ABCD"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/gshare_time_iv"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/share_releaseTime"
            android:src="@drawable/time_icon" />

        <TextView
            android:id="@+id/share_releaseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="08:08"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" >

        <ImageView
            android:id="@+id/share_imageContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000" />

        <TextView
            android:id="@+id/share_textContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="210dp"
            android:maxLines="2"
            android:text="分享内容"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:src="@drawable/line_dashed" />

    <RelativeLayout
        android:id="@+id/gshare_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="300dp" >

        <ImageView
            android:id="@+id/share_praise_icon"
            android:layout_width="27dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="102dp"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:src="@drawable/praise_icon" />

        <TextView
            android:id="@+id/share_praise"
            android:layout_width="20dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="82dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="00"
            android:textColor="@color/text_color" />

        <ImageView
            android:id="@+id/share_comment_icon"
            android:layout_width="31dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:src="@drawable/comment_icon" />

        <TextView
            android:id="@+id/share_comment"
            android:layout_width="20dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="00"
            android:textColor="@color/text_color" />
    </RelativeLayout>

</com.open.lib.TouchView>