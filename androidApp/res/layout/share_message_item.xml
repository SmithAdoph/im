<?xml version="1.0" encoding="utf-8"?>
<com.open.lib.TouchView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10dp" >

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/background_share_item"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:shadowColor="@color/TransparentGrey"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="0.01"
        android:src="@drawable/background_group_share_item" />

    <com.open.lib.TouchView
        android:id="@+id/gshare_title"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:id="@+id/share_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:translationX="10dp"
            android:translationY="10dp" />

        <TextView
            android:id="@+id/share_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABCD"
            android:textColor="@color/text_color_black"
            android:textSize="16sp"
            android:translationX="60dp"
            android:translationY="10dp" />

        <ImageView
            android:id="@+id/gshare_time_iv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/time_icon"
            android:tint="@color/icon_color"
            android:translationX="60dp"
            android:translationY="32dp" />

        <TextView
            android:id="@+id/share_releaseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:08"
            android:textColor="@color/text_color_black_2"
            android:textSize="12sp"
            android:translationX="75dp"
            android:translationY="30dp" />

        <com.open.lib.TouchImageView
            android:id="@+id/num_picker_decrement"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_gravity="right"
            android:padding="15dp"
            android:src="@drawable/num_picker_decrement"
            android:tint="#c8c8c8"
            android:translationX="-105dp"
            android:translationY="7dp" />

        <ImageView
            android:id="@+id/share_praise_icon"
            android:layout_width="27dp"
            android:layout_height="26dp"
            android:layout_gravity="right"
            android:src="@drawable/praise_icon"
            android:tint="@color/icon_color"
            android:translationX="-57dp"
            android:translationY="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/share_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="999"
            android:textColor="#0099cd"
            android:textSize="24sp"
            android:translationX="-62dp"
            android:translationY="11dp" />

        <com.open.lib.TouchImageView
            android:id="@+id/num_picker_increment"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_gravity="right"
            android:padding="15dp"
            android:src="@drawable/num_picker_increment"
            android:tint="#c8c8c8"
            android:translationX="-12dp"
            android:translationY="7dp" />

        <ImageView
            android:id="@+id/share_comment_icon"
            android:layout_width="31dp"
            android:layout_height="26dp"
            android:layout_gravity="right"
            android:src="@drawable/comment_icon"
            android:tint="@color/icon_color"
            android:translationX="-100dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/share_comment"
            android:layout_width="20dp"
            android:layout_height="26dp"
            android:layout_gravity="right"
            android:text="0"
            android:textColor="@color/text_color_black"
            android:translationX="-80dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/share_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="发布成功"
            android:textColor="@color/text_color_black_2"
            android:textSize="12sp"
            android:translationY="30dp"
            android:visibility="gone" />
    </com.open.lib.TouchView>

    <RelativeLayout
        android:id="@+id/list_item_progress_container"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:translationY="58dp"
        android:visibility="gone" >

        <include layout="@layout/view_element_debug1_control_progress" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="60dp" >

        <ImageView
            android:id="@+id/share_imageContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/share_textContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="210dp"
            android:text=""
            android:textColor="@color/text_color_black" />
    </RelativeLayout>

    <com.open.lib.TouchView
        android:id="@+id/commentBoard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"
        android:translationY="200dp" >

        <com.open.lib.TouchTextView
            android:id="@+id/commentContent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/button_comment_background"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#99000000" />

        <com.open.lib.TouchImageView
            android:id="@+id/commentsPoint"
            android:layout_width="22dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_gravity="left|top"
            android:src="@drawable/abc_spinner_mtrl_am_alpha"
            android:tint="#c8c8c8"
            android:translationX="20dp"
            android:translationY="28dp" >
        </com.open.lib.TouchImageView>

        <com.open.lib.TouchView
            android:id="@+id/commentContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:translationY="50dp" >
        </com.open.lib.TouchView>

        <com.open.lib.TouchImageView
            android:id="@+id/commentControl"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="right|bottom"
            android:paddingBottom="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="12dp"
            android:paddingTop="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/beauty_detail_comment_total_icon"
            android:tint="#0099cd" />
    </com.open.lib.TouchView>

</com.open.lib.TouchView>