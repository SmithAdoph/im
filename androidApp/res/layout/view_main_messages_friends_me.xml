<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".UserIntimateActivity" >

    <include layout="@layout/view_title_messages_friends_me" >
    </include>

    <RelativeLayout
        android:id="@+id/rl_userMenuOptions"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp" >

        <ImageView
            android:id="@+id/messages_friends_me_pager_indicator"
            android:layout_width="110dp"
            android:layout_height="2dp"
            android:background="@color/card_color"
            android:translationY="2dp"
            android:visibility="visible" >
        </ImageView>

        <RelativeLayout
            android:id="@+id/rl_chatMessagesList"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="消息"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_intimatefriends"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="好友"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_userInfomation"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="我"
                android:textAlignment="center"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_intimateFriendsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:translationY="88dp"
        android:visibility="visible" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_chatMessagesContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:translationY="88dp"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/rl_chatMessagesNotRead"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_notMessage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@drawable/not_messages"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_notMessage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="暂时没有新消息" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_userInfomationContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/appIconToName"
            android:layout_width="125dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_star_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:background="@color/card_color"
            android:gravity="center_vertical"
            android:translationY="175dp" >

            <ImageView
                android:id="@+id/iv_headImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/face_man" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="30dp" >

                <TextView
                    android:id="@+id/tv_userNickname"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:singleLine="true"
                    android:text="樱桃小丸子"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_userMainBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:lines="2"
                    android:paddingRight="10dp"
                    android:text="爱哭就哭，爱笑就笑，小丸子一样的人生。"
                    android:textColor="@color/text_color" />
            </RelativeLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/into" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/dashed_line"
            android:translationY="265dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/card_color"
            android:gravity="center_vertical"
            android:translationY="265dp"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="积分(0)"
                android:textColor="@color/text_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/card_color"
            android:gravity="center_vertical"
            android:translationY="321dp"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="我的名片"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/noread_message"
                android:padding="5dp"
                android:text="2"
                android:textColor="@color/text_color"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/card_color"
            android:gravity="center_vertical"
            android:translationY="378dp"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="设置"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/noread_message"
                android:padding="5dp"
                android:text="2"
                android:textColor="@color/text_color"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>