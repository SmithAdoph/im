<?xml version="1.0" encoding="utf-8"?>
<com.open.lib.TouchView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="52dp"
    android:layout_height="75dp" >

    <com.open.lib.TouchImageView
        android:id="@+id/grip_card_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_login_background_press"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="top|center_horizontal"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/head_image_status"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="top|center_horizontal"
        android:background="@drawable/group_members_add"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_color_black"
        android:textSize="12sp" />

</com.open.lib.TouchView>