<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".UserIntimateActivity" >

    <include layout="@layout/view_title_share" >
    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp" >

        <RelativeLayout
            android:id="@+id/groupMembersListContent "
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:padding="10dp" >
        </RelativeLayout>

        <ImageView
            android:id="@+id/releaseShareContent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/square_release" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/groupShareMessageContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/appIconToName"
            android:layout_width="125dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_star_text"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="群组分享"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>