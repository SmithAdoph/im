<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.open.welinks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.open.welinks.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.open.welinks.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.open.welinks.Debug1Activity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.open.welinks.UserIntimateActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle"
            android:windowSoftInputMode="adjustPan" >
        </activity>
    </application>

</manifest>