<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PicAndVoiceDetailActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/picandvoice_Pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:flipInterval="30" />

    <RelativeLayout
        android:id="@+id/rl_picandvoice_navigation"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:background="#38000000"
        android:visibility="visible"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/PicAndVoiceDetailBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="25dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/PicAndVoiceDetailBack"
            android:padding="13dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="6/6"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_setcover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="设为封面"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_picandvoice_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_toRightOf="@+id/tv_setcover"
            android:src="@drawable/picandvoice_cancel" />

        <ImageView
            android:id="@+id/iv_picandvoice_del"
           android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:src="@drawable/picandvoice_del" />
    </RelativeLayout>

</RelativeLayout>