<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#33000000" >

        <LinearLayout
            android:id="@+id/ll_setbackgroundbackview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="10dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_backText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="设置聊天背景"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_backgroundOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/rl_selectBackGround"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="选择背景图"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#33ffffff" />

        <RelativeLayout
            android:id="@+id/rl_backGroundFromPhotos"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="从相册中选择"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#33ffffff" />

        <RelativeLayout
            android:id="@+id/rl_backGroundFromCamera"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:text="拍一张"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#33ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_innerBackGround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <GridView
            android:id="@+id/gridView_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#0000"
            android:divider="#0000"
            android:dividerHeight="5dp"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:listSelector="#0000"
            android:numColumns="4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >
        </GridView>
    </LinearLayout>

</LinearLayout>