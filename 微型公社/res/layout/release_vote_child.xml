<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="1dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="1"
            android:background="#4dffffff" >

            <TextView
                android:id="@+id/release_vote_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="1."
                android:textColor="#fff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/release_voew_numadd"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:src="@drawable/face_add"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_weight="5.5"
            android:background="#26ffffff"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/release_vote_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="11.5"
                android:background="#0000"
                android:hint="输入选项"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="#fff"
                android:textSize="18sp" 
                />
            <TextView 
                android:id="@+id/release_vote_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="11.5"
                android:background="#0000"
                android:hint="添加选项"
                android:maxLength="10"
                android:singleLine="true"
                android:textSize="18sp" 
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/release_vote_clear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/input_clear"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>