<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollViewMenu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_horizontalScrollViewMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <com.lejoying.wxgs.activity.view.SquareContentView
        android:id="@+id/stv_squrecontentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/horizontalScrollViewMenu"
        android:background="@drawable/card_background_normal" >
    </com.lejoying.wxgs.activity.view.SquareContentView>

</RelativeLayout>