<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38ffffff"
    tools:context=".SendVoiceActivity" >

    <com.lejoying.wxgs.activity.view.RecordView
        android:id="@+id/recordView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.lejoying.wxgs.activity.view.RecordView>

    <RelativeLayout
        android:id="@+id/sendvoice_rl_navigation"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#2000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sendvoice_button"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/holding"
             />

        <TextView
            android:id="@+id/sendvoice_tv"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="开始录音"
            android:textColor="#fff"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/sendvoice_iv_commit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sendvoice_tv"
            android:layout_centerVertical="true"
            android:src="@drawable/right"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/sendvoice_iv_del"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/sendvoice_tv"
            android:layout_centerVertical="true"
            android:src="@drawable/wrong"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</RelativeLayout>