<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.GroupInformationActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="#33000000" >

        <LinearLayout
            android:id="@+id/ll_backview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/iv_groupInfoBack"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/groupCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="群组信息(0人)"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_groupInfomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/panel_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/card_background_normal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:visibility="visible"
                tools:ignore="UselessParent" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/panel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/panel_right_button"
                        android:layout_width="40sp"
                        android:layout_height="30sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="2dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="8dp"
                        android:src="@drawable/card_back"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="#9fff"
                    tools:ignore="ContentDescription" />

                <RelativeLayout
                    android:id="@+id/viewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" >
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_pagepoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="-20dp"
                    android:layout_weight="0.44"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UselessLeaf,InefficientWeight" >
                </LinearLayout>

                <TextView
                    android:id="@+id/textContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/bottomBar"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:visibility="visible" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#9fff"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/buttonPreviousGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/buttonNextGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_pagination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#33ffffff" />

            <RelativeLayout
                android:id="@+id/rl_groupmembercontrol"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="成员管理"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/into" />
            </RelativeLayout>

            <ImageView
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="#33ffffff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="群名称"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="桌游天下"
                    android:textColor="#fff" />
            </RelativeLayout>

            <ImageView
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="#33ffffff" />

            <RelativeLayout
                android:id="@+id/rl_groupBusiness"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="群名片"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="#33ffffff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="新消息通知"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="开关"
                    android:textColor="#fff" />
            </RelativeLayout>

            <ImageView
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="#33ffffff" />

            <RelativeLayout
                android:id="@+id/rl_groupSetBackGround"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="设置当前聊天背景"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="#33ffffff" />

            <RelativeLayout
                android:id="@+id/rl_checkChatMessages"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="查找聊天记录"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="#33ffffff" />

            <RelativeLayout
                android:id="@+id/rl_deleteChatMessages"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="清空聊天记录"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:background="#33ffffff" />

            <RelativeLayout
                android:id="@+id/rl_exit2DeleteGroup"
                android:layout_width="340dp"
                android:layout_height="44dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="50dp"
                android:background="#33ffffff"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除并退出"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>