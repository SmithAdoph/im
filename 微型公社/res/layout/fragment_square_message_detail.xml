<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/square_background" >

    <com.lejoying.wxgs.activity.view.SquareMessageInfoScrollView
        android:id="@+id/sc_square_message_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/rl_square_message_menu_buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.lejoying.wxgs.activity.view.SquareMessageInfoScrollView
                android:id="@+id/sc_square_message_info_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#26ffffff"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/detailContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </com.lejoying.wxgs.activity.view.SquareMessageInfoScrollView>

            <RelativeLayout
                android:id="@+id/squareDetailBottomBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#26ffffff" >

                <ImageView
                    android:id="@+id/imageView_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#26ffffff" />

                <RelativeLayout
                    android:id="@+id/rl_square_message_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_line" >
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_squareMessageDetailComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessLeaf" >
            </LinearLayout>
        </LinearLayout>
    </com.lejoying.wxgs.activity.view.SquareMessageInfoScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#38000000"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/iv_squareMessageDetailBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_squareMessageSendUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="樱桃小丸子"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>