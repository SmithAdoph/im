<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lejoying.wxgs"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.lejoying.wxgs.app.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:persistent="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lejoying.wxgs.activity.MapStorageDirectoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lejoying.wxgs.activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle" >
        </activity>
        <activity
            android:name="com.lejoying.wxgs.activity.SquareMessageDetail"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle" >
        </activity>
        <activity
            android:name="com.lejoying.wxgs.activity.SendVoiceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle" >
        </activity>
        <activity
            android:name="com.lejoying.wxgs.activity.ReleaseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle" >
        </activity>
        <activity
            android:name="com.lejoying.wxgs.activity.PicAndVoiceDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle" >
        </activity>
        <activity
            android:name="com.lejoying.wxgs.activity.MapStorageImagesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CommonStyle" >
        </activity>

        <service android:name="com.lejoying.wxgs.app.service.PushService" >
        </service>
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
        </service>

        <receiver android:name="com.lejoying.wxgs.app.receiver.InfoReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.lejoying.wxgs.app.parsingiscomplete" />
            </intent-filter>
        </receiver>
    </application>

</manifest>