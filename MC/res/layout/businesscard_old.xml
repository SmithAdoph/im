<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    tools:context=".CallingCardActivity" >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="名片"
            android:textColor="#fff"
            android:textSize="23sp" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="back"
                android:src="@drawable/btn_return" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="callcardRightDialog"
                android:src="@drawable/btn_setting" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_top"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_spacing"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/rl_show"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="20dp" >

                <TextView
                    android:id="@+id/tv_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李伟"
                    android:textColor="#fff"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nickName"
                    android:layout_marginTop="10dp"
                    android:text="主要业务:  "
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/tv_mainbusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nickName"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:paddingLeft="75dp"
                    android:text="送水服务，多买多送！！"
                    android:textColor="#fff" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_spacing2"
                android:layout_width="fill_parent"
                android:layout_height="25dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="280dp"
                android:background="@drawable/frame_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="7dp" >

                <TextView
                    android:id="@+id/tv_mainbusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="二维码"
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_line"
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_alignLeft="@+id/tv_mainbusiness"
                    android:layout_below="@+id/tv_mainbusiness"
                    android:layout_marginTop="8dp"
                    android:background="#9fff" />

                <ImageView
                    android:id="@+id/iv_tdcode"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/iv_line"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/qrcode" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="280dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/frame_background"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="7dp" >

                <TextView
                    android:id="@+id/tv_mainbusiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="社区服务站"
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_line"
                    android:layout_width="fill_parent"
                    android:layout_height="2px"
                    android:layout_alignLeft="@+id/tv_mainbusiness"
                    android:layout_below="@+id/tv_mainbusiness"
                    android:layout_marginTop="8dp"
                    android:background="#9fff" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ll_bottom"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/iv_line" >

                </android.support.v4.view.ViewPager>

                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp" >
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_spacing3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>