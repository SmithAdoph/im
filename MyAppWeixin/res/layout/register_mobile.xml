<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegisterActivity" >

    <RelativeLayout
        android:id="@+id/login_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bar" >

        <Button
            android:id="@+id/login_reback_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:onClick="register_back"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="填写手机号"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/login_passwd_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/textView3"
        android:layout_below="@+id/login_top_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_editbox"
        android:hint="请输入你的手机号码"
        android:phoneNumber="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_passwd_edit"
        android:layout_alignRight="@+id/login_passwd_edit"
        android:layout_below="@+id/login_passwd_edit"
        android:layout_marginTop="15dp" >

        <RelativeLayout
            android:id="@+id/rl_agreeprovision"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true" >
            <ImageView
                android:id="@+id/iv_agreeprovision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:src="@drawable/reg_checkbox_normal" />

            <TextView
                android:id="@+id/tv_agreeprovision"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="17dp"
                android:onClick="agreeProvision"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="已阅读并同意"
                android:textColor="@color/reg_agreeprovision"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rl_agreeprovision"
            android:text="使用条款和隐私政策"
            android:textColor="#274a79" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_login_btn"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_alignRight="@+id/login_passwd_edit"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_style_green"
        android:onClick="registerMobileNext"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_passwd_edit"
        android:layout_below="@+id/login_top_layout"
        android:layout_marginTop="20dp"
        android:background="#3d3d3d"
        android:text="TextView" />

</RelativeLayout>