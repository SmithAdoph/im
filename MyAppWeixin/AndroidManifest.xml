            android:theme="@style/Anim_style2" />
        <activity
            android:name=".ChatActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".ChatServiceActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".ChatServiceWaterActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
