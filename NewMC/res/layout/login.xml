<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    tools:context=".BusinessCardActivity" >

    <RelativeLayout
        android:id="@+id/rl_panel_plogin"
        android:layout_width="fill_parent"
        android:layout_height="290dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/frame_background"
        android:paddingTop="7dp" >

        <TextView
            android:id="@+id/tv_plogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/tv_plogin"
            android:layout_below="@+id/tv_plogin"
            android:layout_marginTop="8dp"
            android:background="#9fff"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_plogin_phone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/iv_line"
            android:layout_alignRight="@+id/iv_line"
            android:layout_below="@+id/iv_line"
            android:layout_marginTop="15dp"
            android:background="#0999"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColor="#fff" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/et_plogin_pass"
            android:layout_alignRight="@+id/et_plogin_pass"
            android:layout_below="@+id/et_plogin_pass"
            android:layout_marginTop="15dp"
            android:background="#2fff"
            android:onClick="login"
            android:text="登    录"
            android:textColor="#fff"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/et_plogin_pass"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/et_plogin_phone"
            android:layout_alignRight="@+id/et_plogin_phone"
            android:layout_below="@+id/et_plogin_phone"
            android:layout_marginTop="15dp"
            android:background="#0999"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="#fff" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/button1"
            android:layout_alignRight="@+id/button1"
            android:layout_below="@+id/button1"
            android:layout_marginTop="8dp"
            android:background="#2fff"
            android:onClick="register"
            android:text="没有账号/注册"
            android:textColor="#fff"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignRight="@+id/button2"
            android:layout_below="@+id/button2"
            android:clickable="true"
            android:gravity="center"
            android:onClick="cLogin"
            android:paddingLeft="5dp"
            android:text="验证码登录"
            android:textColor="@color/click_textcolor"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_panel_clogin"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:background="@drawable/frame_background"
        android:paddingTop="7dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_clogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="验证码登录"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_line2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/tv_clogin"
            android:layout_below="@+id/tv_clogin"
            android:layout_marginTop="8dp"
            android:background="#9fff"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/et_clogin_phone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/iv_line2"
            android:layout_alignRight="@+id/iv_line2"
            android:layout_below="@+id/iv_line2"
            android:layout_marginTop="15dp"
            android:background="#0999"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColor="#fff" >
        </EditText>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/et_clogin_code"
            android:layout_alignRight="@+id/et_clogin_code"
            android:layout_below="@+id/et_clogin_code"
            android:layout_marginTop="15dp"
            android:background="#2fff"
            android:onClick="login"
            android:text="登    录"
            android:textColor="#fff"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/et_clogin_code"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/et_clogin_phone"
            android:layout_alignRight="@+id/et_clogin_phone"
            android:layout_below="@+id/et_clogin_phone"
            android:layout_marginTop="15dp"
            android:background="#0999"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_sendcode"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignRight="@+id/button3"
            android:layout_below="@+id/button3"
            android:clickable="true"
            android:gravity="center"
            android:onClick="sendCode"
            android:paddingLeft="5dp"
            android:text="发送验证码"
            android:textColor="@color/click_textcolor"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>