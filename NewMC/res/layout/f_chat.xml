<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_chatbottom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:divider="#0000"
        android:dividerHeight="20dp"
        android:listSelector="#0000" >
    </ListView>

    <RelativeLayout
        android:id="@+id/rl_chatbottom"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/frame_bottombackground" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/test_edit_normal_background"
            android:ems="10"
            android:textColor="#fff"
            android:textSize="16sp"
            tools:ignore="TextFields" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/editText1"
            android:padding="14dp"
            android:src="@drawable/test_add"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/editText1"
            android:padding="14dp"
            android:src="@drawable/test_send"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</RelativeLayout>