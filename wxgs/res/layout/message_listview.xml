<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    
    >

    <ImageView
        android:id="@+id/message_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/message_speak"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/message_name"
        android:layout_below="@+id/message_name"
        android:text="2"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/message_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/message_person"
        android:singleLine="true"
        android:text="1"
       
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/message_speak"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:singleLine="true"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/message_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toRightOf="@+id/message_time"
        android:text="删除" />
    
</RelativeLayout>